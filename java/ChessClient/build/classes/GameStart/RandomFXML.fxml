<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="GameStart.RandomController"
          xmlns:fx="http://javafx.com/fxml/1" alignment="center"
          hgap="10" vgap="10" styleClass="root">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <stylesheets>
        <URL value="@Login.css" />
    </stylesheets>

    <Text id="welcome-text" text="Searching for Game"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>
    
    <Text id="text" text="0:00"
          GridPane.columnIndex="0" GridPane.rowIndex="1"
          GridPane.columnSpan="1"/>
    
    
    <Button id="back" text="Cancel" minWidth="300" 
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            GridPane.columnSpan="2"
            onAction="#handleBackAction"
            onKeyPressed="#handleBackAction" />

</GridPane>

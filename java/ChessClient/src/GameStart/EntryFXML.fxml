<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="GameStart.EntryController"
          xmlns:fx="http://javafx.com/fxml/1" alignment="center"
          hgap="10" vgap="10" styleClass="root">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <stylesheets>
        <URL value="@Login.css" />
    </stylesheets>

    <Text id="welcome-text" text="Welcome"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Button id="singleplayer" text="Single player" minWidth="300" 
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.columnSpan="2"
            onAction="#handleSingleplayerAction"/>

    <Button id="multiplayer" text="Multiplayer" minWidth="300" 
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            GridPane.columnSpan="2"
            onAction="#handleMultiplayerAction"/>

    <Button id="help" text="Help" minWidth="300" 
            GridPane.columnIndex="0" GridPane.rowIndex="3"
            GridPane.columnSpan="2"
            onAction="#handleHelpAction"/>

</GridPane>
